<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pragyan_dark_grey"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.delta.pragyan16.ProfileActivity">

    <com.delta.pragyan16.fTextView
        android:id="@+id/welcomeTextfull"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:text="Welcome, "
        android:textSize="30sp" />

    <com.delta.pragyan16.fTextView
        android:id="@+id/p_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:paddingTop="10dp"
        android:text="Pragyan ID: "
        android:textSize="25sp" />


    <com.delta.pragyan16.fTextView
        android:id="@+id/email_id"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:text="Email ID: "
        android:textSize="25sp" />

    <!--
        Name
        F_id
        College
        Email ID
    -->

    <com.delta.pragyan16.fTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:paddingTop="10dp"
        android:text="Events you've registered for"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">
        <ListView
            android:id="@+id/registeredEventsListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <com.delta.pragyan16.fTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:id="@+id/loadingtext"
            android:text="Loading ..."/>
    </FrameLayout>
</LinearLayout>